extends ../layout

block content
	h1.
		Customer ID #{customer._id}
	form(action='/customers/#{customer._id}/edit',method='post',name='updatecustomer',enctype='application/x-www-form-urlencoded')
		p Name:
			input#inputName(type='text', value='#{customer.name}', name='name')
		p Badge:
			input#inputBadge(type='number', value='#{customer.badge}', name='badge')
		p DOB:
			input#inputDob(type='date', value='#{customerdob}', name='dob')
		p Are you Loved?:
			input#inputIsLoved(type='checkbox', name='isloved', checked=('#{customer.isloved}'==='true' ? "checked" : undefined))
		p
			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update